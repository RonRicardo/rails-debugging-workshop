# Rails Debugging Workshop - Minimal Gemfile
# Focused on creating strong params and pagination bugs

ruby "3.3.5"

source "https://rubygems.org"

# === Rails Core ===
gem "rails", "~> 7.2.2"

# === Database ===
gem "pg", "~> 1.5" # PostgreSQL adapter

# === Web Server ===
gem "puma", "~> 6.4"

# === Performance ===
gem "bootsnap", "~> 1.16", require: false

# === Rails Essentials ===
gem "tzinfo-data", platforms: %i[ windows jruby ]

# === JSON API ===
gem "jbuilder", "~> 2.11" # For pagination bug scenarios
gem "jsonapi-serializer" # JSON:API serialization

# === CORS (for API testing) ===
gem "rack-cors", "~> 2.0.2", require: "rack/cors"

# === Pagination (for the pagination bug) ===
gem "kaminari", "~> 1.2"

# === Development & Debugging ===
group :development, :test do
  gem "debug", ">= 1.0.0", platforms: %i[ mri ], require: "debug/prelude"
  gem "rspec-rails", "~> 7.0.1"
  gem "factory_bot_rails", "~> 6.4"
  gem "byebug", "~> 11.0"
  gem "pry"
  gem "ostruct"
end

group :development do
  gem "listen", "~> 3.5"
end

group :test do
  gem "webmock", "~> 3.25"
end


